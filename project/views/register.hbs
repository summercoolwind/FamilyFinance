<h5><i class="fas fa-piggy-bank"></i>家庭金融系统</h5>
{{#if errorMsg}}
<p class="red-text">{{errorMsg}}</p>
{{/if}}
<div class="row">
    <form action="/user/add" method="post" class="col s12">
        <div class="row">
            <div class="input-field col s12">
                <input type="text" id="user_name" name="name" class="validate" placeholder="请输入用户名，最少5个字符，最多50个字符">
                <label for="user_name">用户名：</label>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <input type="password" id="password" name="password" class="validate" placeholder="请输入密码，最少10位，最多255位">
                <label for="password">密码：</label>
            </div>
        </div>
        {{#if roles}}
            <div class="row">
                <div class="input-field col s12">
                    <select id="role" name="role">
                        {{#each roles}}
                            <option value={{_id}} } >{{name}}</option>
                        {{/each}}
                    </select>
                    <label>角色类型：</label>
                </div>
            </div>
        {{/if}}
        <div class="row">
            <button type="submit" class="btn waves-effect waves-light">注册</button>
        </div>
    </form>
    <div class="row">
        <a href="/login">已有账户，登录</a>
    </div>
</div>